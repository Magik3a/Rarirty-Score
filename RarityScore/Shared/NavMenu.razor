<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Rarirty Score</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="attributes">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Attributes
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="checkrarity">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Check Rarity
            </NavLink>
        </li>  
        <li class="nav-item px-3">
            <a class="nav-link" href="https://github.com/Magik3a/Rarity-Score" title="Open in Github" target="_blank">
                <span class="oi oi-code" aria-hidden="true"></span>
                GitHub
            </a>
        </li>
    </ul>
    

</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
